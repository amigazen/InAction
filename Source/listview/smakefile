#
# Makefile for BOOPSI objects by Tomasz Muszynski
#

all: listview.gadget

listview.gadget: listview.o
  slink <WITH <
LIBPREFIX _
LIBFD listview.fd
TO listview.gadget
FROM lib:libent.o lib:libinit.o listview.o
LIB lib:sc.lib lib:amiga.lib
NOICONS
SC
SD
ND
LIBVERSION 37 LIBREVISION 2
<

###########################
# Dependences

listview.o: listview.c listview.gadget_rev.h
  sc listview.c

###########################
# Other

# Bump version
bumprev_listview:
  @-bumprev 37 listview.gadget_rev

# Make pragma
pragma: progress.fd listview.fd smartbitmap.fd
  @-fd2pragma listview.fd //SDK/include_pragmas/listview_pragmas.h

# Make autodocs
autodocs: listview_gc.src
  @-autodoc -C -I listview_gc.src >listview_gc.doc

# Install it
install:
  @-copy listview.gadget //SDK/Classes/Gadgets/listview.gadget CLONE
  @-avail FLUSH
