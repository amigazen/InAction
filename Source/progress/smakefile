#
# Makefile for BOOPSI objects by Tomasz Muszynski
#

all: progress.gadget

progress.gadget: progress.o
  slink <WITH <
LIBPREFIX _
LIBFD progress.fd
TO progress.gadget
FROM lib:libent.o lib:libinit.o progress.o
LIB lib:sc.lib lib:amiga.lib
NOICONS
SC
SD
ND
LIBVERSION 37 LIBREVISION 2
<

###########################
# Dependences

progress.o: progress.c progress.gadget_rev.h
  sc progress.c

###########################
# Other

# Bump version
bumprev_progress:
  @-bumprev 37 progress.gadget_rev

# Make pragma
pragma: progress.fd
  @-fd2pragma progress.fd //SDK/Include_h/pragmas/progress_pragmas.h

# Make autodocs
autodocs: progress_gc.src 
  @-autodoc -C -I progress_gc.src >progress_gc.doc

# Install it
install:
  @-copy progress.gadget //SDK/Classes/Gadgets/progress.gadget CLONE
  @-avail FLUSH
