#
# Makefile for BOOPSI objects by Tomasz Muszynski
#

all: page.gadget

page.gadget: page.o
  slink <WITH <
LIBPREFIX _
LIBFD page.fd
TO page.gadget
FROM lib:libent.o lib:libinit.o page.o
LIB lib:sc.lib lib:amiga.lib
NOICONS
SC
SD
ND
LIBVERSION 37 LIBREVISION 3
<

###########################
# Dependences

page.o: page.c page.gadget_rev.h
  sc page.c

###########################
# Other

# Bump version

bumprev_page:
  @-bumprev 37 page.gadget_rev

# Make pragma
pragma: page.fd
  @-fd2pragma page.fd //SDK/Include_h/pragmas/page_pragmas.h

# Make autodocs
autodocs: page_gc.src
  @-autodoc -C -I page_gc.src >page_gc.doc

# Install it
install:
  @-copy page.gadget //SDK/Classes/Gadgets/page.gadget CLONE
  @-avail FLUSH
